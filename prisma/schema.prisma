generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          String   @id @default(cuid())
  url         String
  ogImageUrl  String?
  title       String
  description String?
  tags        Tag[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("link")
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  links Link[]

  @@map("tag")
}
